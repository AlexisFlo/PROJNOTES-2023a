<div class="row">
  <div class="col s12 m6 offset-m3">
    <div class="card" style="background-color: #f0f0f0;">
      <div class="card-content">
        <span class="card-title center-align">LogIn</span>
        <form autocomplete="off" action="#" method="post">

          <!-- Email Field -->
          <div class='input-field'>
            <i class="material-icons prefix">email</i>
            <input
              id='email'
              name='email'
              type='email'
              class="validate"
              required
            />
            <label for='email'>Email</label>
            <span
            class="helper-text"
            data-error="Please enter a valid email address"
            data-success="✅ Correct"></span>
            {{#if errorModel.email }}
            <span class="red-text">{{ errorModel.email }}</span>
            {{/if}}
          </div>

          <!-- Password Field -->
          <div class='input-field'>
            <i class="material-icons prefix">lock</i>
            <input
              id='password'
              name='password'
              type='password'
              class="validate"
              required
            />
            <label for='password'>Password</label>
            <span
            class="helper-text"
            data-error="Please enter a password"
            data-success="✅ Correct"></span>
            {{#if errorModel.password }}
            <span class="red-text">{{ errorModel.password }}</span>
            {{/if}}
          </div>
          <div class="center-align">
            <button type="submit" class="waves-effect waves-light btn blue">
              LogIn
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
